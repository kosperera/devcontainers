{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "dependsOn": "Build",
            "command": "jekyll s -w --config _config.yml,.devcontainer/_config.devcontainer.yml -P 4000",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
   ]
}
